# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=personnel_reporting

# OpenAI / Anthropic / Azure AI Foundry (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=
ANTHROPIC_API_KEY=

# Azure AI Foundry / Azure OpenAI-compatible (alternative to OPENAI_* above)
# Example endpoint (no path): https://<resource>.services.ai.azure.com/
AZURE_AI_ENDPOINT=
AZURE_AI_API_KEY=
AZURE_AI_MODEL=
# Optional alias if you prefer deployment naming semantics
AZURE_OPENAI_DEPLOYMENT=

# API server
MCP_HOST=127.0.0.1
MCP_PORT=8090
ALLOWED_ORIGINS=*
MCP_ALLOW_ANONYMOUS_ACCESS=false
# Dev-only fallback when MCP_ALLOW_ANONYMOUS_ACCESS=true (unit|district|state)
MCP_ANON_SCOPE_LEVEL=state
# Dev diagnostics endpoint; keep false in production
MCP_ENABLE_DB_TEST_ENDPOINT=false
# Temporary demo backend login (disable in production when real auth is added)
MCP_ENABLE_DEMO_LOGIN=false
MCP_DEMO_USERNAME=9999
MCP_DEMO_PIN=9999
MCP_DEMO_LOGIN_TOKEN_TTL_MINUTES=480

# Optional redis cache
REDIS_URL=

# Logging
MCP_LOG_LEVEL=INFO
MCP_LOG_FILE=logs/mcp_app.log
MCP_LOG_MAX_BYTES=10485760
MCP_LOG_BACKUP_COUNT=5

# JWT (for authenticated endpoints)
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256

